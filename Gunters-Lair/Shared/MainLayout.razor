@inherits LayoutComponentBase

<MudThemeProvider Theme="@MyCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Gunter's Lair</MudText>
        <MudText Typo="Typo.h4" Class="ml-3"> | </MudText>
        <MudText Typo="Typo.subtitle1" Class="ml-3">There's Something in the Air!</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        @*Body*@
    </MudMainContent>
</MudLayout>

@code {
    MudTheme MyCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.LightBlue.Darken2,
            Secondary = Colors.Orange.Darken1,
            AppbarBackground = Colors.LightBlue.Default,
            Background = Colors.Grey.Darken4,
            
        }
    };

}